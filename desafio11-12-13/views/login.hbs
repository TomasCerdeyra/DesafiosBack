<h1 class="text-center m-5">Login de usuarios</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form action="/login" method="post">
            <input type="text" name="email" placeholder="ingrese email" class="form-control mb-2">
            <input type="password" name="password" placeholder="ingrese password" class="form-control mb-2">
            <button type="submit" class="btn btn-primary">Acceder</button>
            <a href="/register" class="p-2">Registrate</a>
        </form>
    </div>
</div>

